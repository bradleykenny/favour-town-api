{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"removeComments": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"]
}
